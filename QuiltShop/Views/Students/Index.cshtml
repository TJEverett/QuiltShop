@{
  Layout = "_Layout";
}

@using QuiltShop.Models;
@model List<QuiltShop.Models.Student>;

<h1>Students</h1>

@if(@Model.Count == 0)
{
  <h3>No Students have been added yet!</h3>
}

@foreach (Student student in Model)
{
  <li>@Html.ActionLink($"{student.NameFirst} {student.NameLast}", "Details", new { id = student.StudentId })</li>
}

<p>@Html.ActionLink("Add new Student", "Create")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>