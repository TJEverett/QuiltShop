@{
  Layout = "_Layout";
}

@using QuiltShop.Models;
@model List<QuiltShop.Models.Project>;

<h1>Projects</h1>

@if(@Model.Count == 0)
{
  <h3>No Projects have been added yet!</h3>
}

@foreach (Project project in Model)
{
  <li>@Html.ActionLink($"{project.Name}", "Details", new {id = project.ProjectId})</li>
}

<p>@Html.ActionLink("Add new Project", "Create")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>